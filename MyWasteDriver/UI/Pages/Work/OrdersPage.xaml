<?xml version="1.0" encoding="UTF-8"?>
<pages:BasePage xmlns:pages="clr-namespace:MyWasteDriver.UI.Pages"
			 xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				xmlns:controls="clr-namespace:MyWasteDriver.UI.Controls"
				x:Class="MyWasteDriver.UI.Pages.Work.OrdersPage">

	<ContentPage.Content>

		<controls:StateContainer State="{Binding State}">

			<controls:StateCondition State="Loading">
				<ActivityIndicator IsRunning="True" WidthRequest="40"
			                       HorizontalOptions="Center" VerticalOptions="Center"/>
			</controls:StateCondition>

			<controls:StateCondition State="Normal">

				<StackLayout>


					<ListView   ItemsSource="{Binding OrdersObject.Orders}"
								SelectedItem="{Binding NavigateObject}"
								HasUnevenRows="True"
								BackgroundColor="White"
								IsPullToRefreshEnabled="True" SeparatorVisibility="None">
						
						<ListView.Header>
							<ContentView  BackgroundColor="White">
								<Label FontSize="Medium" TextColor="#707070" Text="Заказы : " HorizontalTextAlignment="Start" VerticalTextAlignment="Center" />
							</ContentView>
						</ListView.Header>

					<ListView.ItemTemplate  >

							<DataTemplate >
								<ViewCell  >
							<Frame CornerRadius="5" HasShadow="True" Margin="5,2.5,5,2.5" >
							<AbsoluteLayout >

							<Label 
							Text="{Binding OrderData}"  FontSize="Micro"
							AbsoluteLayout.LayoutBounds="-10,-10,AutoSize,AutoSize"
							Margin="0,0,0,10 "
							/>

							<Label
							Text="{Binding OrderTime}"	FontSize="Micro"
							AbsoluteLayout.LayoutFlags="XProportional"
							AbsoluteLayout.LayoutBounds="1.025,-10,AutoSize,AutoSize" Margin="0,0,0,10"
							/>
										
							<Label
							Text="{Binding OrderAdress}" FontSize="Micro"
							AbsoluteLayout.LayoutBounds="-10,10,AutoSize,AutoSize"
							Margin="0,0,0,10"
							/>
										
							<Label
							Text="{Binding Material}" FontSize="Micro"
							AbsoluteLayout.LayoutBounds="-10,30,AutoSize,AutoSize"
							Margin="0,0,0,-10"
							/>

							<Label
							Text="{Binding Size}" FontSize="Micro"
							AbsoluteLayout.LayoutFlags="XProportional"
							AbsoluteLayout.LayoutBounds="0.6,30,AutoSize,AutoSize"
							Margin="0,0,0,-10"
							/>
									<Label AbsoluteLayout.LayoutFlags="XProportional"
							Text="{Binding Height}" FontSize="Micro"
							AbsoluteLayout.LayoutBounds="1.025,30,AutoSize,AutoSize"
							Margin="0,0,0,-10"
							/>
									</AbsoluteLayout>

								</Frame>

							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>

				</StackLayout>
			</controls:StateCondition>
		</controls:StateContainer>
	</ContentPage.Content>
</pages:BasePage>