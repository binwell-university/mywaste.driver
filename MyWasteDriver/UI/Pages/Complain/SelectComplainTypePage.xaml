<?xml version="1.0" encoding="UTF-8"?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MyWasteDriver.UI.Controls;assembly=MyWasteDriver"
             xmlns:pages="clr-namespace:MyWasteDriver.UI.Pages;assembly=MyWasteDriver"
             mc:Ignorable="d"
			xmlns:customMap="clr-namespace:TK.CustomMap;assembly=TK.CustomMap"
             x:Class="MyWasteDriver.UI.Pages.Complain.SelectComplainTypePage">
	<ContentPage.ToolbarItems>

		<ToolbarItem Text="Сообщить о проблеме/нарушении" Order="Primary" Priority="0"/>

	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<controls:StateContainer State="{Binding State}">

			<controls:StateCondition State="Loading">
				<ActivityIndicator IsRunning="True" WidthRequest="40"
				                   HorizontalOptions="Center" VerticalOptions="Center"/>
			</controls:StateCondition>

			<controls:StateCondition State="Normal">
				<ScrollView>
						<StackLayout Spacing="10" Margin="10" AbsoluteLayout.LayoutBounds="0,0,1,0" AbsoluteLayout.LayoutFlags="WidthProportional">
						<AbsoluteLayout>
					<customMap:TKCustomMap AbsoluteLayout.LayoutBounds="0,0,AutoSize,200"
											MapType="Street"
											IsShowingUser="True"
										    MapRegion="{Binding Position}"

											/>
							</AbsoluteLayout>
				<Label  TextColor="Black" FontSize="24" Text="БЦ Московский г. Воронеж, Московский пр-кт,д. 4"/>

				<AbsoluteLayout>
					<Button CornerRadius="8"
									Text="Не могу проехать на территорию"
									FontSize="18"
									TextColor="White"
									BackgroundColor="#1b9af7"
									AbsoluteLayout.LayoutBounds="0,0,1,AutoSize"
									AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
									Command="{Binding GoToReportComplainCantDriveCommand}"/>
				</AbsoluteLayout>
				<AbsoluteLayout >
					<Button CornerRadius="8"
									Text="Нет доступа к вторсырью"
									FontSize="18"
									TextColor="White"
									BackgroundColor="#1b9af7"
									AbsoluteLayout.LayoutBounds="0,0,1,AutoSize"
									AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
									Command="{Binding GoToReportComplainNoAccessCommand}"/>
				</AbsoluteLayout>
				<AbsoluteLayout >
					<Button CornerRadius="8"
									Text="Нет вторсырья"
									FontSize="18"
									TextColor="White"
									BackgroundColor="#1b9af7"
									AbsoluteLayout.LayoutBounds="0,0,1,AutoSize"
									AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
									Command="{Binding GoToReportComplainNoRecyclablesCommand}"/>
				</AbsoluteLayout>
				<AbsoluteLayout>
					<Button CornerRadius="8"
									Text="Ошибка в информации об объекте"
									FontSize="18"
									TextColor="White"
									BackgroundColor="#1b9af7"
									AbsoluteLayout.LayoutBounds="0,0,1,AutoSize"
									AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
									Command="{Binding GoToReportComplainDataErrorCommand}"/>
				</AbsoluteLayout>
							<AbsoluteLayout >
								<Button CornerRadius="8"
									Text="Другое"
									FontSize="18"
									TextColor="White"
									BackgroundColor="#1b9af7"
									AbsoluteLayout.LayoutBounds="0,0,1,AutoSize"
									AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
									Command="{Binding GoToReportComplainDataErrorEtcCommand}"/>
							</AbsoluteLayout>
						<AbsoluteLayout Margin="0,40,0,0" AbsoluteLayout.LayoutBounds="0,0.5,AutoSize,AutoSize">
							<Label  Text="			Возникли &#10;		проблемы ? &#10;	Позвоните на &#10;8(800)012-22-33"
					       FontSize="14"
					       FontFamily="Arial"
					       StyleClass="Link"
					       AbsoluteLayout.LayoutBounds="0.5,1,AutoSize,AutoSize" AbsoluteLayout.LayoutFlags="XProportional,YProportional"
					       TextColor="#999999">
								<Label.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding PageCall}" />
								</Label.GestureRecognizers>
							</Label>
						</AbsoluteLayout>
					</StackLayout>
					</ScrollView>
					
			</controls:StateCondition>

			<controls:StateCondition State="NoData">
				<StackLayout>
					<Label Text="LoginPage"/>
				</StackLayout>
			</controls:StateCondition>

			<controls:StateCondition State="Error">
				<StackLayout>
					<Label Text="Ошибка загрузки данных" />
				</StackLayout>

			</controls:StateCondition>
		</controls:StateContainer>
	</ContentPage.Content>
	</pages:BasePage>